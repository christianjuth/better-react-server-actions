{
  "name": "better-react-server-actions",
  "version": "0.0.0-alpha4",
  "description": "Better React Server Actions with Zod validation",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "src/index.ts",
  "files": [
    "cjs",
    "esm",
    "src",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf ./esm/* || true  && rm -rf ./cjs/* || true",
    "build:esm": "tsc --outDir esm --module es6",
    "build:cjs": "tsc --outDir cjs --module commonjs",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "author": "Christian Juth",
  "license": "MIT",
  "repository": "christianjuth/better-react-server-actions",
  "homepage": "https://christianjuth.github.io/better-react-server-actions",
  "bugs": "https://github.com/christianjuth/better-react-server-actions/issues",
  "devDependencies": {
    "@vitest/ui": "^2.1.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "peerDependencies": {
    "zod": ">= 3.11.0",
    "zod-form-data": ">= 2.0.0"
  }
}
